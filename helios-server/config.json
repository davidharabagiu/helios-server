{
    "database": {
        "url": "mongodb://localhost:27017/",
        "name": "helios",
        "collections": {
            "users": "users",
            "files": "files"
        }
    },
    "usernameRules": {
        "minimumLength": 5
    },
    "passwordRules": {
        "minimumLength": 6,
        "mustContainLowercase": true,
        "mustContainUppercase": true,
        "mustContainDigit": true,
        "mustContainSpecial": true
    },
    "authentication": {
        "tokenLength": 128,
        "password": {
            "saltLength": 16,
            "encryptIterations": 1087
        }
    },
    "storage": {
        "fileIdLength": 32,
        "path": "../storage"
    }
}
